<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/team_logo_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_space_1x"
        android:contentDescription="@string/team_logo_image_description"
        android:src="@drawable/ic_baseline_sports_soccer_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_space_1x"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintBottom_toBottomOf="@id/team_logo_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team_logo_image_view"
        app:layout_constraintTop_toTopOf="@id/team_logo_image_view"
        tools:text="Lokomotive" />

</androidx.constraintlayout.widget.ConstraintLayout>